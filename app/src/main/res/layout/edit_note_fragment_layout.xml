<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_note"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/new_note" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/current_note_container"
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="144dp"
        android:background="@drawable/note_edit_background"
        >
        <ImageView
            android:id="@+id/im_pin"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/pin_t"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/tv_current_note"
            />
        <ImageView
            android:id="@+id/im_edit"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/edit_t"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_current_note"
            />

        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/delete_t"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
        />

        <ImageView
            android:id="@+id/im_ok"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/save_t"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_current_note"
            android:onClick="save_click_button"
            android:clickable="true"
            android:visibility="invisible"
        />
        <TextView
            android:id="@+id/tv_current_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_note"
            android:paddingTop="24dp"
            android:onClick="test_click_view"
            android:clickable="true"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="24dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_edit_note"
            android:visibility="invisible"
            android:paddingTop="16dp"
            android:textSize="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="24dp"

            />

    </RelativeLayout>

</LinearLayout>